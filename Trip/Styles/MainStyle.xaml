<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="NanumSquareNeoOTF-Bd">pack://application:,,,/Resources/Fonts/#나눔스퀘어 네오 OTF Bold</FontFamily>
    <FontFamily x:Key="NanumSquareNeoOTF-Eb">pack://application:,,,/Resources/Fonts/#나눔스퀘어 네오 OTF ExtraBold</FontFamily>
    <FontFamily x:Key="NanumSquareNeoOTF-Hv">pack://application:,,,/Resources/Fonts/#나눔스퀘어 네오 OTF Heavy</FontFamily>
    <FontFamily x:Key="NanumSquareNeoOTF-Lt">pack://application:,,,/Resources/Fonts/#나눔스퀘어 네오 OTF Light</FontFamily>
    <FontFamily x:Key="NanumSquareNeoOTF-Rg">pack://application:,,,/Resources/Fonts/#나눔스퀘어 네오 OTF Regular</FontFamily>

    <!--TextBolckStyle-->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontFamily" Value="{StaticResource NanumSquareNeoOTF-Bd}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="LargeTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontFamily" Value="{StaticResource NanumSquareNeoOTF-Bd}"/>
    </Style>

    <Style x:Key="LargeCenterTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontFamily" Value="{StaticResource NanumSquareNeoOTF-Bd}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="NormalTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="{StaticResource NanumSquareNeoOTF-Rg}"/>
    </Style>

    <Style x:Key="NormalCenterTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="{StaticResource NanumSquareNeoOTF-Rg}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="NormalTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="5 0"/>
        <Setter Property="FontFamily" Value="{StaticResource NanumSquareNeoOTF-Rg}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <!--BorderStyle-->
    <Style x:Key="HeaderBoderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Background" Value="#F2EEE9"/>
    </Style>
    
    <Style x:Key="BottomBoderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Background" Value="#F2EEE9"/>
    </Style>

    <Style x:Key="MainBoardBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#F7F3EE" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FavoriteItemBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#FFF8F6"/>
        <!-- 기본 연한 배경 -->
        <Setter Property="BorderBrush" Value="#E5A6A1"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="10 0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFEFEA"/>
                <!-- Hover 시 조금 진하게 -->
                <Setter Property="BorderBrush" Value="#D98E89"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--ButtonStyle-->
    <Style x:Key="ImageBtnStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <!-- 반드시 ContentPresenter 존재 -->
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="MainBoardBtnStyle" TargetType="Button">
        <!-- 기본 값 -->
        <Setter Property="Background" Value="#D0C4B5"/>
        <!-- Base -->
        <Setter Property="Foreground" Value="#2E3A40"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="#B8AA99"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <!-- 파란 포커스 제거 -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                        <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"/>
                    </Border>

                    <!-- 상태 트리거를 템플릿에 직접 적용 -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#C1B3A1"/>
                            <!-- Hover -->
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#A89A88"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#AA9B87"/>
                            <!-- Pressed -->
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#968773"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Background" Value="#E3DCD4"/>
                            <!-- Disabled -->
                            <Setter Property="Foreground" Value="#8C9CA5"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#D3CCC3"/>
                            <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                        </Trigger>
                        <!-- 엔터 기본 버튼 파란 강조 방지 -->
                        <Trigger Property="IsDefaulted" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#B8AA99"/>
                        </Trigger>
                        <!-- 키보드 포커스 파란 효과 방지 -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#B8AA99"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AccommodationBtnStyle" TargetType="Button">
        <Setter Property="Background" Value="#D9F0EA"/>
        <!-- 밝은 민트 -->
        <Setter Property="Foreground" Value="#2E3A40"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="#A8D8CC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#C3E7DE"/>
                            <!-- Hover -->
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#A8D8CC"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#A8D8CC"/>
                            <!-- Pressed -->
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#94BFB2"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Background" Value="#E7F5F2"/>
                            <Setter Property="Foreground" Value="#8C9CA5"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#D3E0DE"/>
                            <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                        </Trigger>
                        <Trigger Property="IsDefaulted" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#A8D8CC"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#A8D8CC"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="NewPlanBtnStyle" TargetType="Button">
        <Setter Property="Background" Value="#C1B3A1"/>
        <Setter Property="Foreground" Value="#2E3A40"/>
        <Setter Property="BorderBrush" Value="#B8AA99"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#B3A591"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#A69884"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Background" Value="#E0DED9"/>
                            <Setter Property="Foreground" Value="#8A8A8A"/>
                        </Trigger>
                        <Trigger Property="IsDefaulted" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#867B6B"/>
                            <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#9C8E7B"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FavoriteButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#EBC3B5"/>
        <Setter Property="Foreground" Value="#2E3A40"/>
        <Setter Property="BorderBrush" Value="#D9A697"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#E0AA9A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#D59785"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Background" Value="#F1E4E0"/>
                            <Setter Property="Foreground" Value="#8A8A8A"/>
                        </Trigger>
                        <Trigger Property="IsDefaulted" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#B57F72"/>
                            <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#C98F81"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--CheckBox Style-->
    <Style x:Key="StarCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <!-- 클릭 히트 영역 확보 -->
                    <Border Background="Transparent" Padding="2">
                        <TextBlock x:Name="Glyph"
                               Text="☆"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="Red"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Glyph" Property="Text" Value="★"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Glyph" Property="Opacity" Value="0.85"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Glyph" Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Grid Style-->
    <Style x:Key="AccommodationGridStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FAF9F6" Offset="0.0"/>
                    <GradientStop Color="#EDEAE6" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>