<UserControl x:Class="Trip.Views.AccommodationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trip.Views"
             mc:Ignorable="d" 
             Width="934" Height="450" Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid Visibility="{Binding NoneItemVisibility}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource HeaderTextStyle}" Text="등록된 숙소가 없어요!"/>
                <StackPanel Orientation="Horizontal" Margin="0 20" HorizontalAlignment="Center">
                    <Button Command="{Binding AddCommand}" Style="{StaticResource AccommodationBtnStyle}" Width="100" Height="30"
                            IsEnabled="{Binding IsAddAble}">
                        <TextBlock Text="숙소 추가하기" Style="{StaticResource NormalCenterTextStyle}"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Visibility="{Binding HasItemVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5 20 5 0">
                    <Button Command="{Binding AddCommand}" IsEnabled="{Binding IsAddAble}" Style="{StaticResource AccommodationBtnStyle}"
                            Width="70" Height="20" Margin="10 0">
                        <TextBlock Text="추가하기" Style="{StaticResource NormalCenterTextStyle}"/>
                    </Button>
                    <Button Command="{Binding EditCommand}" IsEnabled="{Binding IsEditAble}" Style="{StaticResource AccommodationBtnStyle}"
                            Width="70" Height="20">
                        <TextBlock Text="{Binding IsEditText}" Style="{StaticResource NormalCenterTextStyle}"/>
                    </Button>
            </StackPanel>
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Accommodations}"
              Padding="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Brown" BorderThickness="0.5" CornerRadius="3" Margin="0 10">
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <CheckBox IsChecked="{Binding IsFavorite}" Style="{StaticResource StarCheckBoxStyle}" IsEnabled="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                                <TextBlock Text="여행지 이름" FontSize="12" FontWeight="Medium" VerticalAlignment="Center" Margin="5 0"/>
                                <TextBox Text="{Binding NickName}" FontSize="12" FontWeight="Medium" VerticalAlignment="Center" Margin="5 0" Width="120" IsReadOnly="{Binding DataContext.IsReadOnlyMode, RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                                <TextBlock Text="주소" FontSize="12" FontWeight="Medium" VerticalAlignment="Center" Margin="5 0"/>
                                <TextBox Text="{Binding PlaceName}" FontSize="12" FontWeight="Medium" VerticalAlignment="Center" Margin="5 0" Width="200" IsReadOnly="{Binding DataContext.IsReadOnlyMode, RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                                <TextBlock Text="분류" FontSize="12" FontWeight="Medium" VerticalAlignment="Center" Margin="10 0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
