<Window x:Class="Trip.Views.FavoriteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trip.Views"
        mc:Ignorable="d"
        Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="HeadText" Grid.Row="0" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="Text1" FontSize="12" VerticalAlignment="Center" Margin="5 0"/>
            <TextBox x:Name="TextBox1" FontSize="12" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="100" Margin="5 0"/>
            <TextBlock x:Name="Text2" FontSize="12" VerticalAlignment="Center" Margin="5 0"/>
            <TextBox x:Name="TextBox2" FontSize="12" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="100" Margin="5 0"/>
            <TextBlock x:Name="Text3" FontSize="12" VerticalAlignment="Center" Margin="5 0"/>
            <TextBox x:Name="TextBox3" FontSize="12" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="100" Margin="5 0"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5 10">
            <Button x:Name="OkBtn" Click="ResultBtn_Click" Width="80" Height="20" Margin="5 0">
                <TextBlock x:Name="OkBtnText" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5 0"/>
            </Button>
            <Button x:Name="CancelBtn" Click="ResultBtn_Click" Width="80" Height="20" Margin="5 0">
                <TextBlock x:Name="CancelBtnText" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5 0"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
