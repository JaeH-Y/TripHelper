<UserControl x:Class="Trip.Views.NewPlanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trip.Views"
             mc:Ignorable="d" 
             Width="934" Height="450" Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <!--<RowDefinition/>-->
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Height="Auto" Margin="0 10">
                <TextBlock Text="{Binding RandomRecommandedSpot}" Style="{StaticResource LargeCenterTextStyle}" Margin="0 10 0 0"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0">
                <Button Margin="5 10" Command="{Binding AddPlaceCommand}" Style="{StaticResource NewPlanBtnStyle}">
                    <TextBlock Text="장소 추가하기" Style="{StaticResource NormalCenterTextStyle}" Margin="5"/>
                </Button>
                <Button Margin="5 10" Command="{Binding EditPlacesCommand}" MinWidth="70" Style="{StaticResource NewPlanBtnStyle}">
                    <TextBlock Text="{Binding EditPlaceBtnText}" Style="{StaticResource NormalCenterTextStyle}" Margin="5"/>
                </Button>
            </StackPanel>
        </Grid>
        <Border Grid.Row="1" BorderBrush="#D6C9B6" BorderThickness="0 2 0 0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="False"
                          Height="350">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding Places}" Padding="30 10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Border BorderBrush="#D6C9B6" BorderThickness="2" CornerRadius="3" Margin="10" Padding="10">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBlock Text="여행지 이름" Style="{StaticResource NormalCenterTextStyle}" Margin="5 0"/>
                                            <TextBox Text="{Binding NickName}" Style="{StaticResource NormalTextBoxStyle}" Margin="5 0" Width="120"/>
                                            <TextBlock Text="주소" Style="{StaticResource NormalCenterTextStyle}" Margin="5 0"/>
                                            <TextBox Name="LocationBox" Text="{Binding PlaceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NormalTextBoxStyle}" Margin="5 0" Width="200"/>
                                            <Popup PlacementTarget="{Binding ElementName=LocationBox}" Placement="Bottom" StaysOpen="False" AllowsTransparency="True"
                                                    PopupAnimation="Scroll" IsOpen="{Binding IsPopupOpen}">
                                                <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="0 0 4 4" Width="{Binding ElementName=LocationBox, Path=ActualWidth}">
                                                    <ListBox ItemsSource="{Binding Suggestions}" SelectedItem="{Binding SelectedSuggestion}" DisplayMemberPath="Description" KeyboardNavigation.TabNavigation="Cycle"
                                                                ScrollViewer.VerticalScrollBarVisibility="Auto" MaxHeight="200"/>
                                                </Border>
                                            </Popup>
                                            <TextBlock Text="머물 시간" Style="{StaticResource NormalCenterTextStyle}" Margin="5 0"/>
                                            <TextBox Text="{Binding StayHour}" Style="{StaticResource NormalTextBoxStyle}" Margin="5 0" Width="30"/>
                                            <TextBlock Text="시간" Style="{StaticResource NormalCenterTextStyle}" Margin="0"/>
                                            <TextBox Text="{Binding StayMinute}" Style="{StaticResource NormalTextBoxStyle}" Margin="5 0" Width="30"/>
                                            <TextBlock Text="분" Style="{StaticResource NormalCenterTextStyle}" Margin="0"/>
                                            <Button Width="30" Command="{Binding AddFavoriteCommand}" Margin="5 0">
                                                <TextBlock Text="{Binding FavoriteText}" Style="{StaticResource NormalCenterTextStyle}"/>
                                            </Button>
                                            <Button Style="{StaticResource NewPlanBtnStyle}" Command="{Binding CallMapUri}">
                                                <TextBlock Text="지도 불러오기" Margin="5" Style="{StaticResource NormalCenterTextStyle}"/>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="{Binding EditVisibility}">
                                        <Button MinWidth="30" Margin="5 0" Command="{Binding MoveUpCommand}">
                                            <TextBlock Text="Up" Style="{StaticResource NormalCenterTextStyle}" Margin="5 0"/>
                                        </Button>
                                        <Button MinWidth="30" Margin="5 0" Command="{Binding MoveDownCommand}">
                                            <TextBlock Text="Down" Style="{StaticResource NormalCenterTextStyle}" Margin="5 0"/>
                                        </Button>
                                        <Button MinWidth="30" Margin="5 0" Command="{Binding RemoveCommand}">
                                            <TextBlock Text="Remove" Style="{StaticResource NormalCenterTextStyle}" Margin="5 0"/>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button Command="{Binding SavePlanCommand}" MinWidth="70" Margin="5 0" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Style="{StaticResource NewPlanBtnStyle}" IsEnabled="{Binding SaveBtnEnable}" Visibility="Collapsed">
                        <TextBlock Text="Save" Style="{StaticResource NormalCenterTextStyle}" Margin="5"/>
                    </Button>
                    <Button Style="{StaticResource NewPlanBtnStyle}" MinWidth="70" Margin="5 0" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Command="{Binding GetDirectionsCommand}" IsEnabled="{Binding DirectionBtnEnable}">
                        <TextBlock Text="경로 분석" Style="{StaticResource NormalCenterTextStyle}" Margin="5"/>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
