<Window x:Class="Trip.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trip"
        xmlns:wb2 ="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:wb2behaviors ="clr-namespace:Trip.Services"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1490">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Style="{StaticResource HeaderBoderStyle}" Height="70">
            <TextBlock Text="{Binding HeaderText}" Style="{StaticResource HeaderTextStyle}"/>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="390"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1 0" Grid.Column="0" Style="{StaticResource MainBoardBorderStyle}">
                <Grid Grid.Column="0" Width="148" VerticalAlignment="Top" Margin="0 30 0 0">
                    <StackPanel VerticalAlignment="Center">
                        <Button Style="{StaticResource MainBoardBtnStyle}" Width="80" Height="40"
                                Command="{Binding ViewModelChangeCommand}"
                                CommandParameter="NewPlan">
                            <TextBlock Text="새 일정" Style="{StaticResource NormalCenterTextStyle}"/>
                        </Button>
                        <Button Style="{StaticResource MainBoardBtnStyle}" Width="80" Height="40"
                                Command="{Binding ViewModelChangeCommand}"
                                CommandParameter="Accommodation" Margin="0,20">
                            <TextBlock Text="숙소 관리" Style="{StaticResource NormalCenterTextStyle}"
                                       FontSize="12"/>
                        </Button>
                        <Button Style="{StaticResource MainBoardBtnStyle}" Width="80" Height="40"
                                Command="{Binding ViewModelChangeCommand}"
                                CommandParameter="LikedPlace">
                            <TextBlock Text="즐겨찾기" Style="{StaticResource NormalCenterTextStyle}"/>
                        </Button>
                        <Button Style="{StaticResource MainBoardBtnStyle}" Width="80" Height="40"
                                Command="{Binding ViewModelChangeCommand}"
                                CommandParameter="PlanCabinet" Margin="0,20">
                            <TextBlock Text="계획 보관함" Style="{StaticResource NormalCenterTextStyle}"/>
                        </Button>
                        <Button Style="{StaticResource MainBoardBtnStyle}" Width="80" Height="40"
                                Command="{Binding ViewModelChangeCommand}"
                                CommandParameter="Setting">
                            <TextBlock Text="설정" Style="{StaticResource NormalCenterTextStyle}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Column="1">
                <Border Style="{StaticResource MainBoardBorderStyle}" BorderThickness="0 0 1 0">
                    <ContentControl Content="{Binding CurrentViewModel}"/>
                </Border>
            </Grid>
            <Grid Grid.Column="2">
                <TextBlock Style="{StaticResource LargeCenterTextStyle}" Text="지도를 불러올 수 있어요!" Visibility="{Binding NullVisibility}"/>
                <wb2:WebView2 Name="MiniMap" Width="330" Height="330" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsFindVisibility}"
                              wb2behaviors:WebView2Behaviors.NavigateHtml="{Binding ViewHtml}"/>
            </Grid>
        </Grid>
        
        <Border Grid.Row="2" Style="{StaticResource BottomBoderStyle}" Height="70">
                <TextBlock Text="담당자 : 윤재훈" Margin="10" Style="{StaticResource LargeTextStyle}"
                           HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        </Border>
    </Grid>
</Window>
